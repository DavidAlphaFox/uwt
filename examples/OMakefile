.PHONY: all examples
.DEFAULT: examples

section
	OCAMLPACKS+= lwt
	OCAMLINCLUDES[]+= ../src
	OCAML_LIBS+= ../src/uwt-base
	f=help
	Repeat_targets($(f))
	TEST_PROG=$(OCamlLibrary $(f),$(f))

section
	OCAMLPACKS+= ppx_import unix ppx_deriving.show
	OCAML_LIBS+= ../src/uwt-base ../src/uwt
	OCAMLINCLUDES[]+= ../src
	f=show_uwt
	Repeat_targets($(f))
	TEST_PROG=$(OCamlLibrary show_uwt,$(f))

if $(not $(equal $(OSTYPE),Win32))
	section
		OCAMLPACKS+= lwt
		OCAMLINCLUDES[]+= ../src
		OCAML_LIBS+= ../src/uwt-base ../src/uwt
		MLFILES= glob
		CFILES= glob_stubs
		CFLAGS=$(CFLAGS) $(CFLAGS_LIBUV)
		LDFLAGS+=$(LDFLAGS_LIBUV)
		Repeat_targets($(MLFILES))
		GLOB=$(MixedLibrary uwtglob, $(MLFILES), $(CFILES))
		examples:: $(GLOB)

	section
		OCAMLINCLUDES[]+= ../src
		OCAML_LIBS+= ../src/uwt-base ../src/uwt ../src/uwt-ext uwtglob
		MLFILES = custom_c_worker
		OCAMLPACKS+= lwt bigarray unix
		TEST_PROG=$(OCamlProgram custom_c_worker,$(MLFILES))
		Repeat_targets($(MLFILES))
		examples:: $(TEST_PROG)
		clean::
			rm -f custom_c_worker$(EXE)

example_s(f)=
	OCAMLPACKS+= ppx_deriving.show bigarray unix
	OCAMLINCLUDES[]+= ../src
	OCAML_LIBS+= ../src/uwt-base ../src/uv-fs-sync
	Repeat_targets($(f))
	TEST_PROG=$(OCamlProgram $(f),$(f))
	examples:: $(TEST_PROG)
	clean::
		rm -f $(f)$(EXE)

example_r(f,x)=
	OCAMLPACKS+= ppx_deriving.show lwt bigarray unix threads lwt.log
	OCAMLFLAGS+= -thread
	OCAMLINCLUDES[]+= ../src
	OCAML_LIBS+= ../src/uwt-base ../src/uwt ../src/uwt-ext ../src/uwt-preemptive show_uwt
	if $(equal $(x),true)
		OCAML_LIBS+= help
		export
	Repeat_targets($(f))
	TEST_PROG=$(OCamlProgram $(f),$(f))
	examples:: $(TEST_PROG)
	clean::
		rm -f $(f)$(EXE)

example(f)=
	example_r($(f),false)

example_h(f)=
	example_r($(f),true)

example(copy)
example(spawn)
example_h(echo_tcp)
example_h(echo_udp)
example_h(hello_http)
example_h(fs_event)
example(timer)
example_h(fs_poll)
example(usage)
example(dns)
example(work)
example(preemptive)
example(log)
example_s(copy_sync)

if $(equal $(INTERNAL_LIBUV),$(EMPTY))
	clean::
		clean-helper()
else
	clean::
		clean-helper-keep($(basename $(INTERNAL_LIBUV)))

distclean:: clean
	rm -f *~ .*~ $(basename $(INTERNAL_LIBUV))

all: examples
